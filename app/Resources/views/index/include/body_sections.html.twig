{# FINDER #}
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Finder</h2>
                <hr class="star-primary" />
            </div>
        </div>
        <legend class="text-center">
            Geben Sie hier Ihre Suchoptionen ein, um den passenden Kinderwagen zu finden!
        </legend>

        {# todo: dynamisieren#}
        <div class="row">
            <div class="col-sm-4">
                <label class="control-label">Hersteller</label>
                <select multiple="multiple" class="form-control">
                    {# todo: dynamisieren #}
                    {% set brands = [
                        'foo',
                        'bar'
                    ] %}

                    {% for brand in brands %}
                        <option value="#{{ brand }}">{{ brand }}</option>
                    {% endfor %}

                </select>
            </div>
            <div class="col-sm-8">
                <label class="control-label">Preis</label>
                <div id="slider">
                    {# Price Slider #}
                    {% include 'index/include/finder_slider.html.twig' %}
                </div>
            </div>
        </div>

        {# todo: dynamisieren #}
        <div class="row voffset20">
            <div class="col-sm-4">
                <div class="controls">
                    <label class="control-label">Kinderwagen-Typ</label>
                    <select class="form-control">
                        {# todo: dynamisieren #}
                        {% set kinderwagentypen = [
                            'Klassischer Kinderwagen',
                            'Buggy',
                            'Sportwagen',
                            'Zwillingwagen',
                            '...'
                        ] %}

                        {% for kinderwagentyp in kinderwagentypen %}
                            <option value="{{ kinderwagentyp }}">{{ kinderwagentyp }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="controls">
                    <label class="control-label">Alter des Kindes</label>
                    <select class="form-control">
                        {# todo: dynamisieren #}
                        {% set alterdeskindes = [
                        '0-1',
                        '1-2',
                        '2-3',
                        '3-5',
                        '...'
                        ] %}

                        {% for alter in alterdeskindes %}
                            <option value="{{ alter }}">{{ alter }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="controls">
                    <label class="control-label">Farbe</label>
                    <select class="form-control">
                        {# todo: dynamisieren #}
                        {% set farben = [
                        'schwarz',
                        'weiß',
                        'blau',
                        'grün',
                        '...'
                        ] %}

                        {% for farbe in farben %}
                            <option value="{{ farbe }}">{{ farbe }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>

        {# todo: dynamisieren #}
        <div class="row voffset20">
            <div class="col-sm-4">
                <div class="controls">
                    <label class="control-label">Gesamtgewicht</label>
                    <select class="form-control">
                        {# todo: dynamisieren #}
                        {% set gesamtgewicht = [
                        '0 - 5 Kg',
                        '5 - 10 Kg',
                        '10 - 15 Kg',
                        '15 - 20 Kg'
                        ] %}

                        {% for gewicht in gesamtgewicht %}
                            <option value="{{ gewicht }}">{{ gewicht }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="controls">
                    <label class="control-label">TÜV geprüft</label>
                    <select class="form-control">
                        {# todo: dynamisieren #}
                        {% set alterdeskindes = [
                        'Ja',
                        'Nein',
                        'Ist mir egal (Ich hoffe nicht!)'
                        ] %}

                        {% for alter in alterdeskindes %}
                            <option value="{{ alter }}">{{ alter }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="controls">
                    <label class="control-label">Anzahl Räder</label>
                    <select class="form-control">
                        {# todo: dynamisieren #}
                        {% set raeder = [
                        '3',
                        '4'
                        ] %}

                        {% for rad in raeder %}
                            <option value="{{ rad }}">{{ rad }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
    </div>
</section>

